name: Clean WordPress Latest

on:
  schedule:
    - cron: '*/15 * * * *' # Runs every day at 12:00 AM UTC
  workflow_dispatch: # Allows manual trigger

jobs:
  clean-wordpress:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repo
        uses: actions/checkout@v3

      - name: Get Latest WordPress Version
        id: get_version
        run: |
          curl -s https://api.wordpress.org/core/version-check/1.7/ > version.json
          LATEST=$(jq -r '.offers[0].current' version.json)
          echo "version=$LATEST" >> $GITHUB_OUTPUT

      - name: Check for Existing Version
        id: check_existing
        run: |
          if [ -f "VERSION.txt" ] && grep -q "${{ steps.get_version.outputs.version }}" VERSION.txt; then
            echo "Latest version already processed."
            echo "skip=true" >> $GITHUB_OUTPUT
          else
            echo "skip=false" >> $GITHUB_OUTPUT
          fi

      - name: Download WordPress
        if: steps.check_existing.outputs.skip == 'false'
        run: |
          curl -O https://wordpress.org/wordpress-${{ steps.get_version.outputs.version }}.zip
          unzip -q wordpress-${{ steps.get_version.outputs.version }}.zip

      - name: Clean WordPress
        if: steps.check_existing.outputs.skip == 'false'
        run: |
          cd wordpress
          rm -f license.txt readme.html xmlrpc.php
          rm -rf wp-content/themes/twenty*
          rm -rf wp-content/plugins/akismet wp-content/plugins/hello.php
          cd ..
          rm -rf cleaned
          mv wordpress cleaned

      - name: Modify wp-config-sample.php
        if: steps.check_existing.outputs.skip == 'false'
        run: |
          cat << 'EOF' >> cleaned/wp-config-sample.php

// Custom configuration added automatically
define('AUTOMATIC_UPDATER_DISABLED', true);
define('WP_AUTO_UPDATE_CORE', false);

// Cron Disable
define('DISABLE_WP_CRON', true);

// Limit the number of post revisions to 0
define('WP_POST_REVISIONS', false);
EOF

      - name: Save Cleaned Version Number
        if: steps.check_existing.outputs.skip == 'false'
        run: |
          echo "${{ steps.get_version.outputs.version }}" > VERSION.txt

      - name: Commit and Push Changes
        if: steps.check_existing.outputs.skip == 'false'
        run: |
          git config user.name "github-actions"
          git config user.email "github-actions@github.com"
          git add -A
          git commit -m "Cleaned WordPress ${{ steps.get_version.outputs.version }}"
          git push
